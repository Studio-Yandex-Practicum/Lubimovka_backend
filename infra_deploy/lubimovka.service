[Unit]
Description=lubimovka
Requires=docker.service
After=docker.service

[Service]
Restart=always
RestartSec=5
User=root

WorkingDirectory=/usr/local/src/infra_deploy/

# Remove old containers and networks
ExecStartPre=/usr/local/bin/docker-compose -f application_develop_deploy.yml --env-file /usr/local/src/infra_deploy/.github_vars down

# Compose up
ExecStart=/usr/local/bin/docker-compose -f application_develop_deploy.yml --env-file /usr/local/src/infra_deploy/.github_vars up

# Compose down
ExecStop=/usr/local/bin/docker-compose -f application_develop_deploy.yml --env-file /usr/local/src/infra_deploy/.github_vars down

[Install]
WantedBy=multi-user.target